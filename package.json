{
  "name": "lambda-comments",
  "version": "0.0.2",
  "description": "Blog commenting system built with AWS Lambda",
  "repository": "talkingtab/lambda-comments",
  "main": "config.js",
  "scripts": {
    "create-cloudformation": "deploy/cloudformation/cloudformation.sh create",
    "update-cloudformation": "deploy/cloudformation/cloudformation.sh update",
    "delete-cloudformation": "deploy/cloudformation/cloudformation.sh delete",
    "save-cloudformation": "babel-node bin/save-cloudformation-config.js",
    "flip-lambdas-to-4.3": "node bin/run-babel.js ./flip-lambdas-to-4.3",
    "gen-api-key": "babel-node bin/gen-api-key.js",
    "setup-apex": "node bin/run-babel.js ./setup-apex",
    "compile-lambda": "rimraf build/apex/functions && webpack --config deploy/apex/webpack.config.js --display-exclude --display-modules --display-chunks --display-error-details --display-origins --display-cached --display-cached-assets --bail",
    "deploy-lambda": "export AWS_REGION=$(babel-node bin/dump-config.js REGION) && cd build/apex && apex deploy",
    "deploy-backend": "npm run compile-lambda && npm run deploy-lambda",
    "build-frontend": "cd packages/frontend && npm run build-prod",
    "upload-script": "node bin/run-babel.js ./upload-script",
    "deploy-frontend": "npm run build-frontend && npm run upload-script",
    "deploy": "npm run deploy-backend && npm run deploy-frontend && npm run get-client-js-url",
    "start": "cd packages/frontend && npm start",
    "test-local": "mocha --compilers js:./babel-register -g local",
    "test-remote": "mocha --compilers js:./babel-register -g remote",
    "test": "mocha --compilers js:./babel-register",
    "post-url": "babel-node bin/post-url.js http://jimpick.com/",
    "logs": "export AWS_REGION=$(babel-node bin/dump-config.js REGION) && cd build/apex && apex logs -f",
    "get-client-js-url": "node bin/run-babel.js ./get-client-js-url",
    "clean": "rimraf build && rimraf deploy/state && lerna run clean",
    "dist-clean": "lerna run dist-clean && rimraf node_modules",
    "install-all": "npm install && lerna bootstrap && linklocal"
  },
  "author": "Jim Pick <jim@jimpick.com>",
  "bugs": {
    "url": "https://github.com/jimpick/lambda-comments/issues"
  },
  "homepage": "https://github.com/jimpick/lambda-comments#readme",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.3",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.0",
    "chai": "^3.5.0",
    "json-loader": "^0.5.4",
    "lerna": "^2.0.0-beta.10",
    "linklocal": "^2.6.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "string-replace-webpack-plugin": "0.0.3",
    "supertest": "^1.2.0",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "lambda-comments-lambda": "file:./packages/lambda",
    "lambda-comments-utils": "file:./packages/utils",
    "akismet-api": "^2.1.0",
    "aws-sdk": "^2.3.5",
    "dotenv": "^2.0.0",
    "encoding": "^0.1.12",
    "jwa": "^1.1.3",
    "lerna": "2.0.0-beta.9",
    "moment": "^2.11.2",
    "node-fetch": "^1.3.3",
    "node-noop": "^1.0.0",
    "node-slack": "0.0.7",
    "redux": "^3.4.0",
    "redux-logger": "^2.6.1",
    "slugid": "^1.1.0",
    "superagent": "^1.8.0-beta.2",
    "superagent-promise-plugin": "^3.2.0",
    "validator": "^5.2.0",
    "verror": "^1.6.1"
  }
}
